<%- include('partials/header.ejs') %>

<div class="page-container">

  <%- include('partials/topbar.ejs') %>
  <%- include('partials/sidebar.ejs') %>
  <%- include('partials/csrf.ejs') %>

  <div class="main1">
    <h2>Folders</h2>
    <div style="display:flex;">
      <div style="display:flex;margin-right:1em;">
        <sl-input id="foldersearch" type="text" placeholder="Search folder" autofocus="autofocus" clearable>
          <sl-icon slot="prefix" name="search"></sl-icon>
        </sl-input>
        <sl-button title="Search previous" id="foldersearchprevious">
          <sl-icon slot="suffix" name="chevron-left"></sl-icon>
        </sl-button>
        <sl-button title="Search next" id="foldersearchnext">
          <sl-icon slot="suffix" name="chevron-right"></sl-icon>
        </sl-button>
      </div>
      <% if ( manage_folders ) { %>
        <sl-button-group>
          <sl-button pill id="foldercreate" type="button" title="New folder">
            <sl-icon slot="prefix" name="plus-lg"></sl-icon>
          </sl-button>
          <sl-button pill id="folderedit" type="button" title="Edit folder">
            <sl-icon slot="prefix" name="pencil"></sl-icon>
          </sl-button>
          <sl-button pill id="folderremove" type="button" variant="danger" title="Remove folder">
            <sl-icon slot="prefix" name="trash3"></sl-icon>
          </sl-button>
        </sl-button-group>
      <% } %>
    </div>
    <%- include('partials/folderstree.ejs') %>
  </div>

  <div class="main2">
    <h2>Items<sl-badge id="currentpermissions" pill style="padding-left: 1em; font-size: 30%; position: absolute;"></sl-badge></h2>
    <div style="display:flex;">
      <sl-button id="newitem" title="New item" variant="primary" pill disabled="disabled">
        <sl-icon slot="prefix" name="plus-lg"></sl-icon>
      </sl-button>
      <sl-input id="itemsearch" style="margin-left:1em;" placeholder="Filter items" clearable>
        <sl-icon slot="prefix" name="search"></sl-icon>
      </sl-input>
      <sl-select id="typesearch" style="margin-left:1em;" name="typesearch" placeholder="Filter type" clearable></sl-select>
    </div>
    <table id="itemstable" style="display:inline-block; max-height: calc(100vh - var(--bottom-margin)); width: auto; overflow-y: auto;" class="bordered">
      <thead>
        <tr class="sticky">
          <th>Actions</th>
          <th>Type</th>
          <th>Title</th>
          <th>User</th>
          <th>Copy</th>
          <th>Password</th>
          <th>Copy</th>
          <th>Show</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/commondialogs.ejs') %>
<%- include("partials/itemnew.ejs") %>
<%- include("partials/itemedit.ejs") %>
<%- include("partials/itemview.ejs") %>
<%- include("partials/itemactivity.ejs") %>
<%- include("partials/foldernew.ejs") %>
<%- include("partials/folderedit.ejs") %>
<%- include("partials/personalpasswordnew.ejs") %>
<%- include("partials/personalpasswordset.ejs") %>

</div>

<script defer type="module" src="/public/js/folders_shared.js"></script>
<script defer type="module" src="/public/js/items.js"></script>

<%- include('partials/footer.ejs') %>

<% if ( viewitem ) { %>
<input type="hidden" id="viewitem" value="<%= viewitem %>"/>
<% } %>