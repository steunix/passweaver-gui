<%- include('partials/header.ejs') %>

<div class="page-container" id="page_items">

  <%- include('partials/topbar.ejs') %>
  <%- include('partials/sidebar.ejs') %>
  <%- include('partials/csrf.ejs') %>

  <div class="main1">
    <h2>Folders</h2>
    <div style="display:flex;">
      <div style="display:flex;margin-right:1em;">
        <wa-input id="foldersearch" type="text" placeholder="Search folder" autofocus="autofocus" clearable>
          <wa-icon slot="prefix" name="search"></wa-icon>
        </wa-input>
        <wa-button-group>
          <wa-button title="Search previous" appearance="outlined" id="foldersearchprevious">
            <wa-icon slot="prefix" name="chevron-left"></wa-icon>
          </wa-button>
          <wa-button title="Search next" appearance="outlined" id="foldersearchnext">
            <wa-icon slot="prefix" name="chevron-right"></wa-icon>
          </wa-button>
        </wa-button-group>
      </div>
      <% if ( manage_folders ) { %>
        <wa-button-group>
          <wa-button pill id="foldercreate" type="button" variant="brand" appearance="outlined" title="New folder">
            <wa-icon slot="prefix" name="plus"></wa-icon>
          </wa-button>
          <wa-button pill id="folderedit" type="button" appearance="outlined" title="Edit folder">
            <wa-icon slot="prefix" name="pencil"></wa-icon>
          </wa-button>
          <wa-button pill id="folderremove" type="button" variant="danger" appearance="outlined" title="Remove folder">
            <wa-icon slot="prefix" name="trash-can"></wa-icon>
          </wa-button>
        </wa-button-group>
      <% } %>
    </div>
    <br/>
    <%- include('partials/folderstree.ejs') %>
  </div>

  <div class="main2">
    <h2><wa-badge id="currentpermissions" pill style="vertical-align: middle; padding-right: 0.5em;"></wa-badge><span id="sectiontitle">Items</span></h2>
    <div style="display:flex;">
      <wa-button id="newitem" title="New item" variant="primary" pill disabled="disabled">
        <wa-icon slot="prefix" name="plus-lg"></wa-icon>
      </wa-button>
      <wa-input id="itemsearch" style="margin-left:1em;" placeholder="Filter items" clearable>
        <wa-icon slot="prefix" name="search"></wa-icon>
      </wa-input>
      <wa-select id="typesearch" style="margin-left:1em;" name="typesearch" placeholder="Filter type" clearable></wa-select>
    </div>
    <table id="itemstable" style="display:inline-block; max-height: calc(100vh - var(--bottom-margin)); width: auto; overflow-y: auto;" class="bordered">
      <thead>
        <tr class="sticky">
          <th>Actions</th>
          <th>Type</th>
          <th>Title</th>
          <th>User</th>
          <th>Copy user</th>
          <th>Password</th>
          <th>Copy pwd</th>
          <th>Show</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/commondialogs.ejs') %>
<%- include("partials/itemdialog.ejs") %>
<%- include("partials/itemactivity.ejs") %>
<%- include("partials/folderdialog.ejs") %>
<%- include("partials/personalpasswordnew.ejs") %>
<%- include("partials/personalpasswordset.ejs") %>
<%- include("partials/scopeselect.ejs") %>
<%- include("partials/picker.ejs") %>
</div>

<script defer type="module" src="/public/v<%= version %>/js/items.js"></script>

<%- include('partials/footer.ejs') %>

<% if ( viewitem ) { %>
<input type="hidden" id="viewitem" value="<%= viewitem %>"/>
<% } %>