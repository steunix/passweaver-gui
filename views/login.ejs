<%- include('partials/header.ejs') %>

<div class="container">
  <div class="row justify-content-center align-items-center text-center vh-100">
    <div class="col-md-4 p-5 shadow rounded-3">
      <h3 class="mb-4"><strong>Vaulted - <%- company_name %></strong></h3>
      <h5 class="mb-4">Login</h2>
      <form class="mb-3" id="loginForm" action="access" method="post">
        <div class="form-floating mb-3">
          <input type="text" class="form-control" autofocus id="username" name="username" placeholder="User">
          <label for="username">User</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="password" name="password" placeholder="password">
          <label for="password">Password</label>
        </div>
        <button type="submit" class="mb-3 btn btn-primary" onclick="javascript:spinnerShow()">Login</button>
        <% if ( error ) { %>
          <div class="mb-3 alert alert-danger">
            <%= error %>
          </div>
        <% } %>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>