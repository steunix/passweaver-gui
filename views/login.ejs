<%- include('partials/header.ejs') %>

<div class="login-container">
  <div class="header">
    PassWeaver - <%- company_name %>
  </div>

  <div class="login-content">
    <div class="pill">
      <center>
        <img src="/public/images/passweaver-icon-dark.png" width="60"></img>
      </center>
      <form id="loginForm" action="access" method="post">
        <%- include('partials/csfr.ejs') %>
        <sl-input type="text" autofocus id="username" name="username" label="User"></sl-input>
        <sl-input type="password" id="password" name="password" label="Password"></sl-input>
        <sl-divider></sl-divider>
        <% if ( viewitem ) { %>
          <input id="viewitem" name="viewitem" type="hidden" value="<%= viewitem %>"></input>
        <% } %>
        <center>
          <sl-button id="login" type="submit" variant="primary">Login</sl-button>
          <% if ( error ) { %>
            <sl-alert variant="danger" open>
              <sl-icon slot="icon" name="exclamation-octagon"></sl-icon>
              <%= error %>
            </sl-alert>
          <% } %>
        </center>
      </form>
    </div>
  </div>
</div>

<script defer src="/public/js/login.js"></script>

<%- include('partials/footer.ejs') %>