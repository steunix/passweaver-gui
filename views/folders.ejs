<%- include('partials/header.ejs') %>

<div class="container-fluid v-container">

<div class="row">
  <%- include('partials/sidebar.ejs') %>
  <div class="col-sm min-vh-100">
    <%- include('partials/toasts.ejs') %>
    <%- include('partials/topbar.ejs') %>
    <%- include('partials/csfr.ejs') %>
    <div class="row">
    <div class="col-md-3">
      <h5>Folders</h5>
      <div class="d-flex">
        <button id="newfolder" type="button" title="New subfolder" class="btn btn-sm btn-primary flex-shrink-0 me-1" disabled="disabled" data-bs-toggle="modal" data-bs-target="#newfolderdialog"><span class='fa-solid fa-folder-plus'/></button>
        <button id="editfolder" type="button" title="Edit folder" class="btn btn-sm btn-secondary flex-shrink-0 me-1" disabled="disabled" data-bs-toggle="modal" data-bs-target="#editfolderdialog"><span class='fa-solid fa-pen'/></button>
        <button id="removefolder" type="button" title="Remove folder" class="btn btn-sm btn-danger flex-shrink-0 me-3" disabled="disabled"><span class='fa-solid fa-trash'/></button>
        <div class="input-group">
          <input id="foldersearch" type="text" class="form-control" placeholder="Search folder">
          <button class="btn btn-secondary" title="Search previous" type="button" id="foldersearchprevious"><span class="fa-solid fa-chevron-left"></span></button>
          <button class="btn btn-secondary" title="Search next" type="button" id="foldersearchnext"><span class="fa-solid fa-chevron-right"></span></button>
        </div>
      </div>
      <%- include('partials/folderstree.ejs') %>
    </div>
    <div class="col-md-auto">
      <h5>Groups</h5>
      <button id="addgroup" type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#grouppicker">Add group</button>
      <div class="mt-3 v-stickybottom shadow rounded">
        <table id="groupstable" class="table table-hover table-borderless w-auto">
        <thead>
          <tr class="sticky-top">
            <th colspan="2">Actions</th>
            <th>Permission</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
      </div>
    </div>
    </div>
  </div>
</div>

<%- include('partials/commondialogs.ejs') %>
<%- include("partials/foldernew.ejs") %>
<%- include("partials/folderedit.ejs") %>

</div>

<script src="/public/js/folders.js"></script>
<script src="/public/js/folders_shared.js"></script>

<%- include('partials/footer.ejs') %>