<div id="newitemdialog" class="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header v-themebg">
        <h5 class="mb-0">New item</h5>
      </div>
      <div class="modal-body">
        <div class="form-floating mb-1">
          <input type="text" class="form-control border-danger" autofocus id="newtitle" name="newtitle" required="required" placeholder="fake">
          <label for="newtitle" class="form-label">Title (required)</label>
        </div>
        <div class="form-floating mb-1">
          <textarea type="text" class="form-control" id="newdescription" name="newdescription" style="height:10em;" placeholder="fake" ></textarea>
          <label for="newdescription" class="form-label">Description</label>
        </div>
        <div class="form-floating mb-1">
          <input type="text" class="form-control" id="newemail" name="newemail" placeholder="fake">
          <label for="newemail" class="form-label">Email</label>
        </div>
        <div class="form-floating mb-1">
          <input type="text" class="form-control" id="newurl" name="newurl" placeholder="fake">
          <label for="newurl" class="form-label">URL</label>
        </div>
        <div class="form-floating mb-1">
          <input type="text" class="form-control" id="newuser" name="newuser" placeholder="fake">
          <label for="newuser" class="form-label">User</label>
        </div>
        <div class="mb-1">
          <div class="input-group">
            <div class="form-floating input-group">
              <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="fake">
              <label for="newpassword" class="form-label">Password</label>
            </div>
            <button id="togglenewpassword" class="btn btn-warning"><span class="fa-solid fa-eye-slash"></button>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="itemcreate" type="button" class="btn btn-primary" disabled="disabled">Create item</button>
        <button id="cancel" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>