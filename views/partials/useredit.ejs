<sl-dialog id="edituserdialog" label="Edit user" class="dialog-deny-close">
  <sl-input label="Login" id="editlogin" name="editlogin" required="required" autofocus></sl-input>
  <sl-input type="email" label="Email" id="editemail" required="required" name="editemail"></sl-input>
  <sl-input label="Last name" id="editlastname" name="editlastname" required="required"></sl-input>
  <sl-input label="First name" id="editfirstname" name="editfirstname"></sl-input>
  <sl-select label="Locale" id="editlocale" name="editlocale">
    <sl-option value="en_US">en_US</sl-option>
  </sl-select>
  <sl-select label="Auth method" id="editauthmethod" name="editauthmethod">
    <sl-option value="local">local</sl-option>
    <sl-option value="ldap">ldap</sl-option>
  </sl-select>
  <sl-checkbox id="editactive" name="editactive">Active</sl-checkbox>
  <sl-button id="useredit" slot="footer" variant="primary">Save</button>
  <sl-button id="cancel" slot="footer">Cancel</button>
</sl-dialog>