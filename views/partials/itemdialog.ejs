<wa-dialog id="itemdialog" class="dialog-footer" light-dismiss label="Item details">
  <wa-button slot="header-actions" appearance="plain" title="Copy item link" id="idcopylink"><wa-icon name="link"></wa-icon></wa-button>
  <wa-button slot="header-actions" appearance="plain" title="Item activity" id="idactivity"><wa-icon name="clock"></wa-icon></wa-button>
  <wa-input id="idid" style="display:none;"></wa-input>
  <wa-input label="Title" id="idtitle" required autofocus></wa-input>
  <wa-select label="Type" id="idtype"></wa-select>
  <wa-textarea label="Description" id="iddescription"></wa-textarea>
  <wa-input label="Email" id="idemail">
    <wa-copy-button slot="end" title='Copy to clipboard' from="idemail.value"></wa-copy-button>
  </wa-input>
  <wa-input label="URL / Host" id="idurl">
    <wa-copy-button slot="end" title='Copy to clipboard' from="idurl.value"></wa-copy-button>
  </wa-input>
  <wa-input label="User" id="iduser">
    <wa-copy-button slot="end" title='Copy to clipboard' from="iduser.value"></wa-copy-button>
  </wa-input>
  <wa-input label="Password" id="idpassword" type="idpassword" password-toggle>
    <wa-icon slot="end" name="wand-sparkles" title='Generate a new password' id="idgenerate"></wa-icon>
    <wa-copy-button slot="end" title='Copy to clipboard' id="idcopypassword" from="idpassword.value"></wa-copy-button>
  </wa-input>
  <wa-button id="idsave" slot="footer" variant="brand">Save</wa-button>
  <wa-button id="idcancel" data-dialog="close" slot="footer">Cancel</wa-button>
</wa-dialog>