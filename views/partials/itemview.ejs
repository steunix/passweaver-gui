<sl-dialog id="itemviewdialog" label="Item details">
  <sl-input label="Title" id="viewtitle" name="viewtitle" required="required" readonly></sl-input>
  <sl-textarea label="Description" id="viewdescription" name="viewdescription" readonly></sl-textarea>
  <sl-input label="Email" id="viewemail" name="viewemail" style="display:inline-block;width:calc(100% - 2.5rem);" readonly></sl-input>
  <sl-copy-button from="viewemail.value"></sl-copy-button>
  <sl-input label="URL" id="viewurl" name="viewurl" readonly style="display:inline-block;width:calc(100% - 2.5rem);"></sl-input>
  <sl-copy-button from="viewurl.value"></sl-copy-button>
  <sl-input label="User" id="viewuser" name="viewuser" style="display:inline-block;width:calc(100% - 2.5rem);" readonly></sl-input>
  <sl-copy-button from="viewuser.value"></sl-copy-button>
  <sl-input label="Password" id="viewpassword" name="viewpassword" style="display:inline-block;width:calc(100% - 2.5rem);" type="password" password-toggle readonly></sl-input>
  <sl-copy-button from="viewpassword.value"></sl-copy-button>
</sl-dialog>