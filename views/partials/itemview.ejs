<wa-dialog id="itemviewdialog"  light-dismiss label="Item details">
  <wa-button slot="header-actions" appearance="plain" title="Copy item link" id="itemviewcopylink"><wa-icon name="link"></wa-icon></wa-button>
  <wa-button slot="header-actions" appearance="plain" title="Item activity" id="itemviewactivity"><wa-icon name="clock"></wa-icon></wa-button>
  <wa-input style="display:none;" id="itemviewid"></wa-input>
  <wa-input label="Title" id="viewtitle" name="viewtitle" readonly></wa-input>
  <wa-select label="Type" id="viewtype" name="viewtype" disabled></wa-select>
  <wa-textarea label="Description" id="viewdescription" name="viewdescription" readonly></wa-textarea>
  <wa-input label="Email" id="viewemail" name="viewemail" readonly>
    <wa-copy-button slot="end" title='Copy to clipboard' from="viewemail.value"></wa-copy-button>
  </wa-input>
  <wa-input label="URL / Host" id="viewurl" name="viewurl" readonly>
    <wa-copy-button slot="end" title='Copy to clipboard' from="viewurl.value"></wa-copy-button>
  </wa-input>
  <wa-input label="User" id="viewuser" name="viewuser" readonly>
    <wa-copy-button slot="end" title='Copy to clipboard' from="viewuser.value"></wa-copy-button>
  </wa-input>
  <wa-input label="Password" id="viewpassword" name="viewpassword" type="password" password-toggle readonly>
    <wa-copy-button slot="end" title='Copy to clipboard' id="itemviewcopypassword" from="viewpassword.value"></wa-copy-button>
  </wa-input>
</wa-dialog>