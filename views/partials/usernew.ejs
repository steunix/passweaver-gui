<wa-dialog id="newuserdialog" class="dialog-footer" label="New user" class="dialog-deny-close">
  <div class="wa-stack">
    <wa-input label="Login" id="newlogin" name="newlogin" required="required" autofocus maxlength="50"></wa-input>
    <wa-callout variant="danger" id="newloginerror" style="display:none">
      <wa-icon slot="icon" name="exclamation-triangle"></wa-icon>
      User login already exists
      <span id="newloginerrortext"></span>
    </wa-callout>
    <wa-input type="email" label="Email" id="newemail" required="required" name="newemail" maxlength="50"></wa-input>
    <wa-input label="Last name" id="newlastname" name="newlastname" required="required" maxlength="100"></wa-input>
    <wa-input label="First name" id="newfirstname" name="newfirstname" maxlength="100"></wa-input>
    <wa-select label="Locale" id="newlocale" name="newlocale" required="required">
      <wa-option value="en_US">en_US</wa-option>
    </wa-select>
    <wa-select label="Authentication method" id="newauthmethod" name="newauthmethod" required="required">
      <wa-option value="local">local</wa-option>
      <wa-option value="ldap">ldap</wa-option>
      <wa-option value="apikey">API key</wa-option>
    </wa-select>
    <wa-input label="Password" type="password" id="newpassword" name="newpassword" password-toggle required="required" maxlength="100"></wa-input>
    <wa-input label="Confirm password" type="password" id="newpasswordconfirm" name="newpasswordconfirm" password-toggle required="required" maxlength="100"></wa-input>
    <wa-select label="Status" id="newactive" name="newactive" required="required">
      <wa-option value="A" selected="selected">Active</wa-option>
      <wa-option value="N">Not active</wa-option>
    </wa-select>
  </div>
  <wa-button id="usercreate" slot="footer" variant="brand">Save</wa-button>
  <wa-button id="cancel" data-dialog="close" slot="footer">Cancel</wa-button>
</wa-dialog>
