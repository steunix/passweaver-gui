<sl-dialog id="newuserdialog" label="New user" class="dialog-deny-close">
  <sl-input label="Login" id="newlogin" name="newlogin" required="required" autofocus maxlength="50"></sl-input>
  <sl-alert variant="danger" id="newloginerror">
    <sl-icon slot="icon" name="exclamation-triangle"></sl-icon>
    User login already exists
    <span id="newloginerrortext"></span>
  </sl-alert>
  <sl-input type="email" label="Email" id="newemail" required="required" name="newemail" maxlength="50"></sl-input>
  <sl-input label="Last name" id="newlastname" name="newlastname" required="required" maxlength="100"></sl-input>
  <sl-input label="First name" id="newfirstname" name="newfirstname" maxlength="100"></sl-input>
  <sl-select label="Locale" id="newlocale" name="newlocale" required="required">
    <sl-option value="en_US">en_US</sl-option>
  </sl-select>
  <sl-select label="Authentication method" id="newauthmethod" name="newauthmethod" required="required">
    <sl-option value="local">Local</sl-option>
    <sl-option value="ldap">LDAP</sl-option>
    <sl-option value="apikey">API key</sl-option>
  </sl-select>
  <sl-input label="Password" type="password" id="newpassword" name="newpassword" password-toggle required="required" maxlength="100"></sl-input>
  <sl-input label="Confirm password" type="password" id="newpasswordconfirm" name="newpasswordconfirm" password-toggle required="required" maxlength="100"></sl-input>
  <sl-checkbox id="newactive" name="newactive" checked>Active</sl-checkbox>
  <sl-button id="usercreate" slot="footer" variant="primary">Save</sl-button>
  <sl-button id="cancel" slot="footer">Cancel</sl-button>
</sl-dialog>